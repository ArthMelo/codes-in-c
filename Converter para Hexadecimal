#include<stdio.h>
#include<string.h>
int main(void){
    int numero, j = 0;
    char binario[j];
    scanf("%d", &numero);

    while(numero != 0){
        j++;
        binario[j] = numero%16;
            if(binario[j] == 10){
                binario[j] = 'A';
            }
            if(binario[j] == 11){
                binario[j] = 'B';
            }
            if(binario[j] == 12){
                binario[j] = 'C';
            }
             if(binario[j] == 13){
                binario[j] = 'D';
            }
             if(binario[j] == 14){
                binario[j] = 'E';
            }
             if(binario[j] == 15){
                binario[j] = 'F';
            }
        numero = numero/16;
    
    for(int i = j; i > 0; i -- ){
        if(binario[i] >= 65 && binario[i] <= 70){
            printf("%c", binario[i]);
        }
        else if(binario[i]<10){
            printf("%d", binario[i]);

    }
    }
}
}
